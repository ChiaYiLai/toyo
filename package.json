{
    "name": "toyo",
    "version": "1.0.0",
    "description": "toyo",
    "author": "chia",
    "license": "ISC",
    "devDependencies": {
        "concurrently": "^3.5.1",
        "node-sass": "^5.0.0",
        "onchange": "^7.1.0",
        "pug-cli": "^1.0.0-alpha6"
    },
    "scripts": {
        "pug": "pug -w ./src/pug/*.pug -o ./",
        "sass": "node-sass --output-style compressed ./src/css/main.sass -o ./dist/css/",
        "sass-w": "onchange ./src/css/**/*.sass -- npm run sass",
        "w": "concurrently 'npm run pug'"
    }
}
