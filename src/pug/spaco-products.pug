mixin spacoProducts(page)
    .each-product.flex-3.product-tag.upgrade
        a(href="spaco-x-3-pro.html")
            img(src="images/product/spaco-x-3-pro/cover.png" alt="SPACO 觸控櫥下型-氣泡水冰溫熱飲水機 X-3 Pro")
        .title
            a(href="spaco-x-3-pro.html") SPACO 觸控櫥下型-氣泡水冰溫熱飲水機 X-3 Pro
    .each-product.flex-3.product-tag.new-show
        a(href="spaco-p-3-pro.html")
            img(src="images/product/spaco-p-3-pro/cover.png" alt="SPACO 觸控櫥下型-雙溫飲水機 P-3 Pro")
        .title
            a(href="spaco-p-3-pro.html") SPACO 觸控櫥下型-雙溫飲水機 P-3 Pro
    .each-product.flex-3
        a(href="SPACO-X-3.html")
            img(src="images/product/spaco-x-3/cover.png" alt="SPACO 觸控櫥下型-氣泡水冰熱飲水機 X-3 (第一代)")
        .title
            a(href="SPACO-X-3.html") SPACO 觸控櫥下型-氣泡水冰熱飲水機 X-3 (第一代)
    if page !== 'index'
        .each-product.flex-3
            a(href="SPACO-P-3.html")
                img(src="images/product/spaco-p-3/cover.png" alt="SPACO 觸控櫥下型-冰冷熱飲水機 P-3 (第一代)")
            .title
                a(href="SPACO-P-3.html") SPACO 觸控櫥下型-冰冷熱飲水機 P-3 (第一代)
